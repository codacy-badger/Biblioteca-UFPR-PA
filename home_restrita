  <!-- SCRIPTS -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script>
    function liberar(){
      $.ajax({
        url: "verificar.php",
        type: "post",
        data: "executarFuncao=" + 6 + "&nivel=" + 1,
        success: function(result) {
          if (result == true) {
            document.getElementById("carregando").style.display = "none";
            document.getElementById("passou").style.display = "block";
          } else {
            window.location = 'login.html';
          }
        }
      })
    }

    $(document).ready(function() {
      $.ajax({
        url: "consulta_local/historico_registros.php",
        type: "post",
        data: "fn=" + 1,
        success: function(result) {
          $("#livrosRegistradosHoje").html(result);
        }
      })

      $.ajax({
        url: "contador_usuario/funcoes.php",
        type: "post",
        data: "funcao=" + 6 + "&numero=" + 0,
        success: function(result) {
          $("#pessoasRegistradasHoje").html(result);
        }
      })

      $('#passou').hide();

      $.ajax({
        url: "seguranca.php",
        success: function(x){
          if(x==false){
            location.href = 'error.html';
          } else {
            liberar();
          }
        }
      })

      /*$.ajax({
        url: 'templates/menu.php',
        success: function(menu) {
          $('#menuID').html(menu);
        }

      });*/

      $('.dropdown-trigger').dropdown();
      $('.sidenav').sidenav();
      $('.tabs').tabs();
    });
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.6/js/uikit.min.js"></script>
